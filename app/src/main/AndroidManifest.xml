<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="stip.stipperscheckin">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name="stip.stipperscheckin.SplashScreenActivity"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="stip.stipperscheckin.views.ScannerView"
            android:theme="@style/Theme.AppCompat"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="stip.stipperscheckin.views.CheckInResultView"
            android:theme="@style/Theme.AppCompat"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="stip.stipperscheckin.views.SettingsView"
            android:theme="@style/Theme.AppCompat"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>